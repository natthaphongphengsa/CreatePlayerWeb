@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nr</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Jerseynumber</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Player != null)
        {
            @foreach (var player in Model.Player)
            {
                <tr>
                    <th scope="row">@player.Id</th>
                    <td>@player.Name</td>
                    <td>@player.City</td>
                    <td>@player.JerseyNumber</td>
                </tr>
            }

        }
        else
        {
            <h>Empty!</h>
        }

    </tbody>
</table>
<a asp-page="/Create" class="btn btn-primary">Create player</a>